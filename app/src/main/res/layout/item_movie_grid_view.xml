<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_grid_movie_img"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <ImageView
        android:id="@+id/imageViewGradiente2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:background="#00C08A8A"
        android:src="@drawable/gradient_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_grid_movie_img"
        app:layout_constraintTop_toTopOf="@+id/item_grid_movie_img" />

    <TextView
        android:id="@+id/item_grid_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breaking Bad"
        android:textAlignment="viewStart"
        android:textColor="@color/button_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_grid_movie_img"
        app:layout_constraintStart_toStartOf="@+id/item_grid_movie_img" />


</androidx.constraintlayout.widget.ConstraintLayout>